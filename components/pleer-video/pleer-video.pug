include /components/icon/icon

mixin pleer-video
    +b.player
        +e.inner-block
        +e.wrapper
            +e.button-close
                +icon('player-close.svg')
            +e.video-content
                +e.VIDEO.video(width='1320', height='780')
                    +e.SOURCE(
                        src='https://www.learningcontainer.com/wp-content/uploads/2020/05/sample-mp4-file.mp4'
                    )
                +icon('player-play', 200, 200).player__button-play
        +e.background
